# Philips Consumer Electronics Company
# Name: PHL24M1N3200Z
# Mode: User Define
# RGB:  100, 95, 92
#
# Brightness: 65
# Contrast:   50
# Sharpness:  50
# Gamma:      2.2

output DP-1 {
   adaptive_sync off
   pos 0,0
   mode 1920x1080@120.00Hz
   bg #beab9a solid_color
}

input type:keyboard {
   repeat_delay 200
   repeat_rate 50
}

input type:pointer {
   accel_profile "flat"
   pointer_accel "0"
}

# BINDS: (i) mod, mod+shift maps
set $mod Mod4
set $alt Mod1

bindsym $mod+0 exec amixer -c 1 -q sset Master 4%+
bindsym $mod+9 exec amixer -c 1 -q sset Master 4%-
bindsym $mod+m exec chromium
bindsym $mod+n exec firefox
bindsym $mod+z exec foot -e bash --rcfile   $ENV
bindsym $mod+s exec grim -g "$(slurp)"      $HOME/$(date +%F-%H-%M-%S).jpg
bindsym $mod+y exec grim -g "0,0 1920x1080" $HOME/$(date +%F-%H-%M-%S).jpg
bindsym $mod+c kill
bindsym $mod+a fullscreen
bindsym $mod+f floating toggle
bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+h resize grow left  10 px
bindsym $mod+j resize grow down  10 px
bindsym $mod+k resize grow up    10 px
bindsym $mod+l resize grow right 10 px
bindsym $mod+e resize set  430px 340px
bindsym $mod+r resize set  620px 750px
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5

bindsym $mod+shift+1 move container to workspace number 1
bindsym $mod+shift+2 move container to workspace number 2
bindsym $mod+shift+3 move container to workspace number 3
bindsym $mod+shift+4 move container to workspace number 4
bindsym $mod+shift+5 move container to workspace number 5
bindsym $mod+shift+c reload
bindsym $mod+shift+q exit

# THEME: (i) window properties
gaps left 172
gaps right 388
gaps top 158
gaps bottom 98

default_border pixel 0
hide_edge_borders both
floating_modifier $mod normal
for_window [app_id=".*"] floating enable, titlebar hide
for_window [app_id=foot] max_render_time 1
for_window [app_id=mpv] border pixel 10

# THEME: (5) border, background, foreground, indicator, child
set $cols0 #fcf2e8
set $cols1 #fcf2e8

client.focused          $cols1  $cols1  $cols1  $cols1  $cols1
client.focused_inactive $cols1  $cols1  $cols1  $cols1  $cols1
client.unfocused        $cols1  $cols1  $cols1  $cols1  $cols1
client.urgent           $cols0  $cols0  $cols0  $cols0  $cols0

# dress cursor
seat seat0 xcursor_theme \
     "material_light_cursors"

exec gsettings set org.gnome.desktop.interface cursor-theme \
     "material_light_cursors"


exec swayidle -w \
  timeout 2400 'swaymsg "output * dpms off"' \
  resume       'swaymsg "output * dpms on"'
