#!/bin/sh

EDITOR="vim"
BROWSER="firefox"
VIDEO="mpv"
MUSIC="mpv --script=$HOME/.config/mpv/script-opts/piko.lua"

case "${1##*.}" in
    docx | doc  | pdf)     $BROWSER      "$1" ;;
    opus | mp3  | flac)    $TERM $MUSIC  "$1" ;;
     png | jpe  | jpg                         |\
    jpeg | jfif | avif                        |\
    webp | gifv | gif                         |\
    webm | mkv  | mp4)     $VIDEO        "$1" ;;
    *)                     $TERM $EDITOR "$1" ;;
esac
